@import '../../style/utils.styl'
@import '../../style/media.styl'

.switch
  display: flex
  +mobile()
    flex-direction: column
    align-items: flex-end

.switchLabel
  transform: translateY(- pxToRem(2))
  white-space: nowrap
  +mobile()
    transform: none

.switchInputBox
  position: relative
  display: inline-block
  width: pxToRem(28)
  height: pxToRem(14)
  margin-left: pxToRem(10)
  +mobile()
    margin-left: 0
    margin-top: pxToRem(15)

.switchInput
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  cursor: pointer

.switchSlider
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none

.switchSlider:before
  position: absolute
  content: ""
  height: pxToRem(14)
  width: pxToRem(14)
  border-radius: 9999px
  transition: transform 200ms ease

.switchInput:checked + .switchSlider:before
  transform: translateX(pxToRem(15))

.switchSlider
  border-radius: 9999px
