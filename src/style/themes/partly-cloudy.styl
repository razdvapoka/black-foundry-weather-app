@import '../utils.styl'
@import '../media.styl'
@import '../font-utils.styl'

@keyframes animPartlyCloudy {
  from {
    font-variation-settings: 'wdth' 760, 'wght' 500, 'slnt' -15
  }
  to {
    font-variation-settings: 'wdth' 100, 'wght' 100, 'slnt' -15
  }
}

@keyframes animPartlyCloudyM {
  0% {
    font-variation-settings: 'wdth' 200, 'wght' 400, 'slnt' -15
  }
  33% {
    font-variation-settings: 'wdth' 200, 'wght' 700, 'slnt' -15
  }
  66% {
    font-variation-settings: 'wdth' 200, 'wght' 100, 'slnt' -15
  }
}

.partly-cloudy
  background-color: #8895AF
  color: white

  .slogan
    justify-content: flex-start

  // text styles
  .gargantuan
    font-size: pxToRem(206)
    line-height: (180 / 206)
    letter-spacing: tracking(-60)
    text-align: left
    margin-left: pxToRem(430)
    grtskGigaMediumBkslnt()
    animation: animPartlyCloudy 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
    +tablet()
      font-size: pxToRem(183)
      line-height: (160 / 183)
      margin-left: pxToRem(16)
    +mobile()
      grtskExaRegularBkslnt()
      font-size: pxToRem(115)
      line-height: (101 / 115)
      letter-spacing: tracking(-40)
      margin-left: pxToRem(31)
      animation: animPartlyCloudyM 4000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite

  .top-line
    background: linear-gradient(270deg, #FFFFE8, #C29EE6, #9ED2E5)
    animation: topline-animation 10s ease infinite
    background-size: 300% 300%

  .bottomBox
    background-color: #A3FFE3
    +tablet()
      &:after
        background-color: #A3FFE3

  .bottom
    color: #FF9300

  .col-content
    border-top: 1px solid rgba(255,255,255,0.5)

  .switch-slider
    box-shadow: 0 0 0 pxToRem(2) white

  .switch-slider:before
    background-color: #A3FFE3

  .try-button
    border: pxToRem(1) solid white

  menuStyle(
    bgColor: #8895AF,
    inputColor: #8895AF,
    inputBgColor: #3C414B,
    itemsColor: #3C414B,
    borderColor: #3C414B,
    shadowColor: rgba(60,65,75,0.1)
  )
