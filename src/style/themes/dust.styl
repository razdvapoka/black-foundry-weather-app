@import '../utils.styl'
@import '../media.styl'
@import '../font-utils.styl'

@keyframes animDust {
  from {
    font-variation-settings: 'wdth' 100, 'wght' 300, 'slnt' 0
  }
  to {
    font-variation-settings: 'wdth' 100, 'wght' 100, 'slnt' 0
  }
}

@keyframes animDustAlt {
  from {
    font-variation-settings: 'wdth' 1000, 'wght' 300, 'slnt' 0
  }
  to {
    font-variation-settings: 'wdth' 100, 'wght' 100, 'slnt' 0
  }
}

@keyframes animDustAltT {
  from {
    font-variation-settings: 'wdth' 530, 'wght' 300, 'slnt' 0
  }
  to {
    font-variation-settings: 'wdth' 100, 'wght' 100, 'slnt' 0
  }
}

.dust
  background-color: #D5D5D5
  color: #0A1640

  .slogan
    position: relative

    .dust-mask-box
      position: absolute
      width: 100vw - pxToRem(22)
      height: pxToRem(50)
      top: pxToRem(145)
      left: 50%
      transform: translateX(-50%)
      +tablet()
        top: pxToRem(80)
      +mobile()
        top: pxToRem(35)
        height: pxToRem(90)
    .dust-mask
    .dust-mask-t
    .dust-mask-m
       color: #FFFF05
       background-color: transparent
    .dust-mask
       display: block
       +tablet()
         display: none
    .dust-mask-t
      display: none
      +tablet()
        display: block
      +mobile()
        display: none
    .dust-mask-m
      display: none
      +mobile()
        display: block

  // text styles
  .gargantuan
    display: block
    position: relative
    font-size: pxToRem(289)
    line-height: (250 / 289)
    grtskZettaLight()
    animation: animDust 2000ms cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite alternate
    .dust-t, .dust-d
      grtskMegaLight()
      animation: animDustAlt 2000ms cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite alternate
      +tablet()
        animation: animDustAltT 2000ms cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite alternate
      +mobile()
        animation: none
    .dust-euy
      padding-bottom: pxToRem(10)
    +tablet()
      font-size: pxToRem(208)
      line-height: (180 / 208)
      .dust-t, .dust-d
        grtskTeraLight()
    +mobile()
      font-size: pxToRem(84)
      line-height: (80 / 84)
      animation: none
      br
        display: none
      .dust-d
        grtskZettaLight()
      .dust-euy
        grtskTeraLight()

  .top-line
    background: linear-gradient(270deg, #FFD5F8, #BEF7E6, #FFFF05)
    animation: topline-animation 10s ease infinite
    background-size: 300% 300%

  .bottomBox
    background-color: #FFFF05
    &:after
      +tablet()
        background-color: #FFFF05

  .bottom
    color: #BEF0FF

  .col-content
    border-top: 1px solid rgba(10, 22, 64, 0.6)

  .switch-slider
    box-shadow: 0 0 0 pxToRem(2) #0A1640

  .switch-slider:before
    background-color: #0A1640

  .try-button
    border: pxToRem(1) solid #0A1640

  menuStyle(
    bgColor: #D5D5D5,
    inputColor: #0A1640,
    inputBgColor: #FFFF05,
    itemsColor: #0A1640,
    borderColor: #FFFF05
  )
