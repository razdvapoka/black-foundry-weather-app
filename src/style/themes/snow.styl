.snow
  background-color: white
  color: $BLUE

  // text styles
  .gargantuan
    font-size: pxToRem(249)
    line-height: (227 / 249)
    grtskZettaExtraLight()
    +tablet()
      font-size: pxToRem(216)
      line-height: (185 / 216)
    +mobile()
      font-size: pxToRem(114)
      line-height: (103 / 114)
    .ss
    .w
      animation: animSnowSSW 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
      +tablet()
        animation: animSnowSSWT 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
      +mobile()
        animation: none
    .et
      animation: animSnowEt 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
      +mobile()
        animation: none
    .ll
      animation: animSnowLl 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
      +tablet()
        animation: animSnowLlT 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
    .tt
      animation: animSnowTT 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
      +tablet()
        animation: animSnowTTT 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
    .ll
    .tt
      grtskMegaExtraLight()
      +tablet()
        grtskTeraExtraLight()
      +mobile()
        grtskPetaExtraLight()
        animation: none
    .i
      grtskPetaExtraLight()
      animation: animSnowI 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
      +tablet()
        grtskZettaExtraLight()
        animation: animSnowIT 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
      +mobile()
        animation: none
    .sn
      grtskMegaBold()
      +tablet()
        grtskTeraBold()
      +mobile()
        grtskZettaBold()
        animation: none
    .o
      grtskZettaBold()
      animation: animSnowO 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
      +mobile()
        grtskTeraBold()
        animation: none

  .top-line
    background: linear-gradient(270deg, #C42BF2, #611AF9, #000AFF)
    animation: topline-animation 10s ease infinite
    background-size: 300% 300%

  .bottomBox
    background-color: $BLUE
    +tablet()
      &:after
        background-color: $BLUE

  .bottom
    color: white

  .col-content
    border-top: 1px solid rgba(23, 23, 23, 0.2)

  .switch-slider
    box-shadow: 0 0 0 pxToRem(2) $BLUE

  .switch-slider:before
    background-color: $BLUE

  .try-button
    border: pxToRem(1) solid $BLUE

  .forecast
      color: $BLACK

  menuStyle(
    bgColor: #FFFFFF,
    inputColor: #FFFFFF,
    inputBgColor: #002CD9,
    itemsColor: #002CD9,
    borderColor: #002CD9,
    shadowColor: rgba(0, 44, 217, 0.2)
  )
