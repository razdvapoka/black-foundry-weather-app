@import '../utils.styl'

.default
  background-color: #FFFFE8

  // text styles
  .xxs
    font-size: pxToRem(12)
    line-height: (14 / 12)
  .xs
    font-size: pxToRem(14)
    line-height: (17 / 14)
  .s
    font-size: pxToRem(19)
    line-height: (23 / 19)
  .m
    font-size: pxToRem(19)
    line-height: (27 / 19)
  .l
    font-size: pxToRem(21)
    line-height: (25 / 21)
  .xl
    font-size: pxToRem(22)
    line-height: (26 / 22)
  .xxl
    font-size: pxToRem(27)
    line-height: (32 / 27)
  .gigantic
    font-size: pxToRem(45)
    line-height: (54  / 45)
  .gargantuan
    font-size: pxToRem(202)
    line-height: (178 / 202)
    letter-spacing: tracking(-40)

  .top-line
    background: linear-gradient(#C42BF2, #000AFF)

  .bottomBox
    background-color: #002CD9

  .bottom
    color: #C42BF2
