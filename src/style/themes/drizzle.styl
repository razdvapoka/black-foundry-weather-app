@import '../utils.styl'
@import '../media.styl'
@import '../font-utils.styl'

@keyframes animDrizzle {
  from {
    font-variation-settings: 'wdth' 100, 'wght' 500, 'slnt' 15
    letter-spacing: tracking(-10);
  }
  to {
    font-variation-settings: 'wdth' 1000, 'wght' 100, 'slnt' 0
    letter-spacing: tracking(-40);
  }
}

@keyframes animDrizzleSecond {
  from {
    font-variation-settings: 'wdth' 1000, 'wght' 100, 'slnt' 0
    letter-spacing: tracking(-40);
  }
  to {
    font-variation-settings: 'wdth' 100, 'wght' 500, 'slnt' 15
    letter-spacing: tracking(-10);
  }
}

@keyframes animDrizzleT {
  from {
    font-variation-settings: 'wdth' 100, 'wght' 500, 'slnt' 15
    letter-spacing: tracking(-20);
  }
  to {
    font-variation-settings: 'wdth' 530, 'wght' 100, 'slnt' 0
    letter-spacing: tracking(-40);
  }
}

@keyframes animDrizzleSecondT {
  from {
    font-variation-settings: 'wdth' 530, 'wght' 100, 'slnt' 0
    letter-spacing: tracking(-40);
  }
  to {
    font-variation-settings: 'wdth' 100, 'wght' 500, 'slnt' 15
    letter-spacing: tracking(-20);
  }
}

@keyframes animDrizzleM {
  from {
    font-variation-settings: 'wdth' 100, 'wght' 500, 'slnt' 15;
    letter-spacing: tracking(0);
  }
  to {
    font-variation-settings: 'wdth' 200, 'wght' 100, 'slnt' -15;
    letter-spacing: tracking(-20);
  }
}

@keyframes animDrizzleSecondM {
  from {
    font-variation-settings: 'wdth' 200, 'wght' 100, 'slnt' -15;
    letter-spacing: tracking(-20);
  }
  to {
    font-variation-settings: 'wdth' 100, 'wght' 500, 'slnt' 15;
    letter-spacing: tracking(0);
  }
}


.drizzle
  background-color: #E0F9FF
  color: #00A7FF

  // text styles
  .gargantuan
    font-size: pxToRem(232)
    line-height: (210 / 232)
    letter-spacing: tracking(-10)
    grtskZettaMediumItalic()
    animation: animDrizzle 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
    .drizzle-second
      font-size: pxToRem(214)
      line-height: (194 / 214)
      letter-spacing: tracking(-40)
      grtskMegaThin()
      animation: animDrizzleSecond 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
    +tablet()
      font-size: pxToRem(232)
      line-height: (210 / 232)
      letter-spacing: tracking(-20)
      animation: animDrizzleT 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
      .drizzle-second
        grtskTeraThinBkslnt()
        animation: animDrizzleSecondT 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
    +mobile()
      font-size: pxToRem(124)
      line-height: (113 / 124)
      letter-spacing: tracking(0)
      animation: animDrizzleM 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate
      .drizzle-second
        font-size: pxToRem(124)
        line-height: (113 / 124)
        letter-spacing: tracking(-20)
        grtskExaThinBkslnt()
        animation: animDrizzleSecondM 2000ms cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite alternate

  .top-line
    background: linear-gradient(270deg, #FFEC05, #FF9300, #4A9DFF)
    animation: topline-animation 10s ease infinite
    background-size: 300% 300%

  .bottomBox
    background-color: #00A7FF
    +tablet()
      &:after
        background-color: #00A7FF

  .bottom
    color: #FF9300

  .col-content
    border-top: 1px solid rgba(0, 167, 255, 0.45)

  .switch-slider
    box-shadow: 0 0 0 pxToRem(2) #00A7FF

  .switch-slider:before
    background-color: #00A7FF

  .try-button
    border: pxToRem(1) solid #00A7FF

  menuStyle(
    bgColor: #E0F9FF,
    inputColor: #E0F9FF,
    inputBgColor: #00A7FF,
    itemsColor: #00A7FF,
    borderColor: #00A7FF,
    shadowColor: rgba(0, 167, 255, 0.1)
  )
