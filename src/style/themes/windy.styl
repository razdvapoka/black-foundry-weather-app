@import '../utils.styl'
@import '../media.styl'
@import '../font-utils.styl'

@keyframes animWindyBlow {
  from {
    font-variation-settings: 'wdth' 530, 'wght' 300, 'slnt' 0
  }
  to {
    font-variation-settings: 'wdth' 100, 'wght' 300, 'slnt' 0
  }
}

@keyframes animWindyWith {
  from {
    font-variation-settings: 'wdth' 100, 'wght' 300, 'slnt' 0
  }
  to {
    font-variation-settings: 'wdth' 530, 'wght' 300, 'slnt' 0
  }
}

@keyframes animWindyThe {
  from {
    font-variation-settings: 'wdth' 100, 'wght' 300, 'slnt' 0
  }
  to {
    font-variation-settings: 'wdth' 1000, 'wght' 300, 'slnt' 0
  }
}

@keyframes animWindyWind {
  from {
    font-variation-settings: 'wdth' 1000, 'wght' 300, 'slnt' 0
  }
  to {
    font-variation-settings: 'wdth' 100, 'wght' 300, 'slnt' 0
  }
}

.windy
  background-color: white
  color: #171717

  // text styles
  .gargantuan
    font-size: pxToRem(234)
    line-height: (213 / 234)
    grtskZettaLight()
    .windy-blow
      animation: animWindyBlow 2000ms cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite alternate
      +mobile()
        animation: none
    .windy-tbr
      display: none
    .windy-with
      grtskTeraLight()
      animation: animWindyWith 2000ms cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite alternate
      +mobile()
        animation: none
    .windy-the
      grtskMegaLight()
      animation: animWindyThe 2000ms cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite alternate
      +tablet()
        animation: animWindyThe 2000ms cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite alternate
      +mobile()
        animation: none
    .windy-wind
      animation: animWindyWind 2000ms cubic-bezier(0.455, 0.05, 0.55, 0.95) infinite alternate
      +mobile()
        animation: none
    +tablet()
      font-size: pxToRem(168)
      line-height: (153 / 168)
      .windy-tbr
        display: block
      .windy-with
        grtskZettaLight()
      .windy-wind
        grtskMegaLight()
    +mobile()
      grtskExaLight()
      font-size: pxToRem(112)
      line-height: (102 / 112)
      .windy-with
        grtskTeraLight()
      .windy-the
        grtskTeraLight()
      .windy-wind
        grtskExaLight()

  .top-line
    background: linear-gradient(270deg, #5FA0FA, #FFEC05, #F24C4C)
    animation: topline-animation 10s ease infinite
    background-size: 300% 300%

  .bottomBox
    background-color: #D93D3D
    +tablet()
      &:after
        background-color: #D93D3D

  .bottom
    color: #00A7FF

  .col-content
    border-top: 1px solid rgba(23,23,23,0.2)

  .switch-slider
    box-shadow: 0 0 0 pxToRem(2) #171717

  .switch-slider:before
    background-color: #171717

  .try-button
    border: pxToRem(1) solid #171717

  menuStyle(
    bgColor: #FFF,
    inputColor: #FFF,
    inputBgColor: #171717,
    itemsColor: #121212,
    borderColor: #171717
  )
