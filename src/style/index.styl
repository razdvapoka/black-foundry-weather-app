@import './consts.styl'
@import './media.styl'
@import './text.styl'
@import './utils.styl'
@import './themes/default.styl'

html, body
  height: 100%
  width: 100%
  color: $BLACK

:root {
  font-family: 'Helvetica Neue', Helvetica, arial, sans-serif
  font-weight: normal
  font-size: ($ROOT_FONT_SIZE / $CANONIC_SCREEN_WIDTH * 100) vw
}

+tablet()
  :root {
    font-size: ($ROOT_FONT_SIZE / $CANONIC_SCREEN_WIDTH_T * 100) vw
  }

+mobile()
  :root {
    font-size: ($ROOT_FONT_SIZE / $CANONIC_SCREEN_WIDTH_M * 100) vw
  }

#app
  height: 100%

h2
  font-weight: normal

.top-line
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: pxToRem(5)

.bottom
  width: pxToRem(1880)
  height: pxToRem(50)
  margin: 0 auto

.bottomBox
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  padding: pxToRem(20) 0
