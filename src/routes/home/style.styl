@import '../../style/utils.styl'
@import '../../style/media.styl'

.home
  min-height: 100%
  position: relative
  padding: pxToRem(60)
  padding-bottom: pxToRem(180)
  display: flex
  flex-direction: column
  +tablet()
    padding: pxToRem(60) pxToRem(80) pxToRem(180)

.slogan
  text-align: center
  margin-top: pxToRem(50)
  margin-bottom: pxToRem(120)

.forecast
  margin-top: auto

.row
  display: flex
  justify-content: space-between
  childrenSpacingX(pxToRem(105))
  +tablet()
    flex-direction: column
    childrenSpacingX(0)
    childrenSpacingY(pxToRem(60))

.col
  flex: 1
  &Content
    display: flex
    align-items: center
    justify-content: space-between
    min-height: pxToRem(145)
    border-top: 1px solid #D1D1BF
  &Caption
    margin-bottom: pxToRem(5)

.desktopPromo
  desktopOnly()

.tabletPromo
  tabletOnly()

.forecastItem
  width: pxToRem(75)
  childrenSpacingY(pxToRem(8))

.designedBy
  margin-top: pxToRem(40)

.try
  display: inline-block
  border: pxToRem(1) solid black
  padding: pxToRem(12)
  margin-top: pxToRem(20)
  cursor: pointer

.setIn
  margin-top: pxToRem(7)

.firstItem
  font-family: GrtskPetaBkslnt, Helvetica, sans-serif !important
